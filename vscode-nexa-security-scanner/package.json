{
    "name": "nexa-security-scanner",
    "displayName": "Nexa Security Scanner",
    "description": "Analyse de sécurité du code avec détection des vulnérabilités et conformité aux standards",
    "version": "1.0.0",
    "publisher": "nexa-framework",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other",
        "Linters",
        "Testing"
    ],
    "keywords": [
        "nexa",
        "security",
        "vulnerability",
        "scanner",
        "compliance",
        "audit"
    ],
    "activationEvents": [
        "onLanguage:php",
        "workspaceContains:**/*.nx",
        "onCommand:nexa.security.scanFile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "nexa.security.scanFile",
                "title": "Scanner le fichier",
                "category": "Nexa Security",
                "icon": "$(shield)"
            },
            {
                "command": "nexa.security.scanProject",
                "title": "Scanner le projet",
                "category": "Nexa Security",
                "icon": "$(search)"
            },
            {
                "command": "nexa.security.showReport",
                "title": "Afficher le rapport de sécurité",
                "category": "Nexa Security"
            },
            {
                "command": "nexa.security.fixVulnerability",
                "title": "Corriger la vulnérabilité",
                "category": "Nexa Security"
            },
            {
                "command": "nexa.security.checkCompliance",
                "title": "Vérifier la conformité",
                "category": "Nexa Security"
            },
            {
                "command": "nexa.security.auditDependencies",
                "title": "Auditer les dépendances",
                "category": "Nexa Security"
            },
            {
                "command": "nexa.security.generateSecurityPolicy",
                "title": "Générer une politique de sécurité",
                "category": "Nexa Security"
            },
            {
                "command": "nexa.security.exportReport",
                "title": "Exporter le rapport",
                "category": "Nexa Security"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "nexaSecurityScanner",
                    "name": "Security Scanner",
                    "when": "nexaProject"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "nexa.security.scanProject",
                    "when": "view == nexaSecurityScanner",
                    "group": "navigation"
                },
                {
                    "command": "nexa.security.showReport",
                    "when": "view == nexaSecurityScanner",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "nexa.security.scanProject",
                    "when": "nexaProject"
                },
                {
                    "command": "nexa.security.checkCompliance",
                    "when": "nexaProject"
                }
            ],
            "editor/context": [
                {
                    "command": "nexa.security.scanFile",
                    "when": "resourceExtname == .php && nexaProject",
                    "group": "nexa"
                },
                {
                    "command": "nexa.security.fixVulnerability",
                    "when": "resourceExtname == .php && nexaProject",
                    "group": "nexa"
                }
            ]
        },
        "configuration": {
            "title": "Nexa Security Scanner",
            "properties": {
                "nexa.security.autoScan": {
                    "type": "boolean",
                    "default": true,
                    "description": "Scanner automatiquement à la sauvegarde"
                },
                "nexa.security.severityLevel": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high",
                        "critical"
                    ],
                    "default": "medium",
                    "description": "Niveau de sévérité minimum à afficher"
                },
                "nexa.security.complianceStandards": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "OWASP",
                            "PCI-DSS",
                            "GDPR",
                            "ISO27001"
                        ]
                    },
                    "default": [
                        "OWASP"
                    ],
                    "description": "Standards de conformité à vérifier"
                },
                "nexa.security.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "vendor/**",
                        "node_modules/**"
                    ],
                    "description": "Patterns de fichiers à exclure du scan"
                },
                "nexa.security.enableDependencyAudit": {
                    "type": "boolean",
                    "default": true,
                    "description": "Activer l'audit des dépendances"
                },
                "nexa.security.reportFormat": {
                    "type": "string",
                    "enum": [
                        "html",
                        "json",
                        "sarif",
                        "pdf"
                    ],
                    "default": "html",
                    "description": "Format des rapports de sécurité"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.18.126",
        "@types/vscode": "^1.100.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "crypto": "^1.0.1",
        "node-fetch": "^3.3.2",
        "semver": "^7.5.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nexa-framework/vscode-extensions.git"
    },
    "license": "MIT"
}
