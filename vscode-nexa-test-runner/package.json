{
    "name": "nexa-test-runner",
    "displayName": "Nexa Test Runner",
    "description": "Exécution des tests intégrée avec coverage en temps réel et génération automatique de tests",
    "version": "1.0.0",
    "publisher": "nexa-framework",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Testing",
        "Debuggers",
        "Other"
    ],
    "keywords": [
        "nexa",
        "testing",
        "phpunit",
        "coverage",
        "mocking",
        "fixtures"
    ],
    "activationEvents": [
        "onLanguage:php",
        "workspaceContains:**/*.nx",
        "workspaceContains:**/phpunit.xml",
        "onCommand:nexa.test.runTests"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "nexa.test.runTests",
                "title": "Exécuter tous les tests",
                "category": "Nexa Test",
                "icon": "$(play)"
            },
            {
                "command": "nexa.test.runCurrentTest",
                "title": "Exécuter le test actuel",
                "category": "Nexa Test",
                "icon": "$(play-circle)"
            },
            {
                "command": "nexa.test.runTestFile",
                "title": "Exécuter les tests du fichier",
                "category": "Nexa Test"
            },
            {
                "command": "nexa.test.debugTest",
                "title": "Déboguer le test",
                "category": "Nexa Test",
                "icon": "$(debug-alt)"
            },
            {
                "command": "nexa.test.generateTest",
                "title": "Générer un test",
                "category": "Nexa Test"
            },
            {
                "command": "nexa.test.showCoverage",
                "title": "Afficher la couverture",
                "category": "Nexa Test"
            },
            {
                "command": "nexa.test.createMock",
                "title": "Créer un mock",
                "category": "Nexa Test"
            },
            {
                "command": "nexa.test.createFixture",
                "title": "Créer une fixture",
                "category": "Nexa Test"
            },
            {
                "command": "nexa.test.watchMode",
                "title": "Mode surveillance",
                "category": "Nexa Test",
                "icon": "$(eye)"
            }
        ],
        "views": {
            "test": [
                {
                    "id": "nexaTestExplorer",
                    "name": "Nexa Tests",
                    "when": "nexaProject"
                }
            ],
            "explorer": [
                {
                    "id": "nexaTestCoverage",
                    "name": "Test Coverage",
                    "when": "nexaProject"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "nexa.test.runTests",
                    "when": "view == nexaTestExplorer",
                    "group": "navigation"
                },
                {
                    "command": "nexa.test.watchMode",
                    "when": "view == nexaTestExplorer",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "nexa.test.runTests",
                    "when": "nexaProject"
                },
                {
                    "command": "nexa.test.generateTest",
                    "when": "nexaProject"
                }
            ],
            "editor/context": [
                {
                    "command": "nexa.test.runCurrentTest",
                    "when": "resourceExtname == .php && nexaProject",
                    "group": "nexa@1"
                },
                {
                    "command": "nexa.test.generateTest",
                    "when": "resourceExtname == .php && nexaProject",
                    "group": "nexa@2"
                },
                {
                    "command": "nexa.test.debugTest",
                    "when": "resourceExtname == .php && nexaProject",
                    "group": "nexa@3"
                }
            ],
            "editor/title": [
                {
                    "command": "nexa.test.runTestFile",
                    "when": "resourceFilename =~ /Test\\.php$/ && nexaProject",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Nexa Test Runner",
            "properties": {
                "nexa.test.phpunitPath": {
                    "type": "string",
                    "default": "./vendor/bin/phpunit",
                    "description": "Chemin vers l'exécutable PHPUnit"
                },
                "nexa.test.autoRun": {
                    "type": "boolean",
                    "default": false,
                    "description": "Exécuter automatiquement les tests à la sauvegarde"
                },
                "nexa.test.showCoverageOnRun": {
                    "type": "boolean",
                    "default": true,
                    "description": "Afficher la couverture après l'exécution des tests"
                },
                "nexa.test.coverageFormat": {
                    "type": "string",
                    "enum": [
                        "html",
                        "clover",
                        "text"
                    ],
                    "default": "html",
                    "description": "Format de rapport de couverture"
                },
                "nexa.test.testDirectory": {
                    "type": "string",
                    "default": "tests",
                    "description": "Répertoire des tests"
                },
                "nexa.test.enableParallelExecution": {
                    "type": "boolean",
                    "default": false,
                    "description": "Activer l'exécution parallèle des tests"
                },
                "nexa.test.mockFramework": {
                    "type": "string",
                    "enum": [
                        "phpunit",
                        "mockery",
                        "prophecy"
                    ],
                    "default": "phpunit",
                    "description": "Framework de mocking à utiliser"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.100.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "lcov-parse": "^1.0.0",
        "xml2js": "^0.6.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nexa-framework/vscode-extensions.git"
    },
    "license": "MIT"
}
