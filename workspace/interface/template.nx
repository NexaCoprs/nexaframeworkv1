<h3 class="text-xl font-semibold text-gray-900 mb-4 mt-8">Exemples d'Extensions Tierces</h3>
<div class="code-block">
<code>
// Extension de Cache<br>
class CacheExtension extends NxExtension {<br>
    public function register(NxTemplateEngine $engine): void {<br>
        $engine->registerDirective('cache', function($expression, $content) {<br>
            $key = md5($expression . $content);<br>
            if ($cached = $this->getCache($key)) {<br>
                return $cached;<br>
            }<br>
            $result = $this->processContent($content);<br>
            $this->setCache($key, $result);<br>
            return $result;<br>
        });<br>
    }<br>
}<br><br>
// Extension de Sécurité<br>
class SecurityExtension extends NxExtension {<br>
    public function register(NxTemplateEngine $engine): void {<br>
        $engine->on('template.before_render', [$this, 'sanitizeData']);<br>
        $engine->registerComponent('secure-form', [$this, 'renderSecureForm']);<br>
    }<br>
}<br><br>
// Extension d'Internationalisation<br>
class I18nExtension extends NxExtension {<br>
    public function register(NxTemplateEngine $engine): void {<br>
        $engine->registerDirective('trans', [$this, 'translate']);<br>
        $engine->addGlobal('__', [$this, 'translate']);<br>
    }<br>
}<br><br>
// Utilisation dans les templates<br>
// @cache(user_profile_{{ $user->id }})<br>
//     &lt;nx:user-profile user="{{ $user }}" /&gt;<br>
// @endcache<br><br>
// &lt;nx:secure-form action="/login" csrf="true" /&gt;<br><br>
// @trans('welcome.message')<br>
// {{ __('user.greeting', ['name' => $user->name]) }}
</code>
