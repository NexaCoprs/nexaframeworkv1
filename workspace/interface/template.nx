// Enregistrer une nouvelle directive<br>
$engine->registerDirective('repeat', function($expression, $content) {<br>
    preg_match('/\$(\w+)\s+times/', $expression, $matches);<br>
    $times = $matches[1] ?? 1;<br>
    <br>
    $result = '';<br>
    for ($i = 0; $i < $times; $i++) {<br>
        $result .= str_replace('$index', $i, $content);<br>
    }<br>
    return $result;<br>
});<br><br>

// Utilisation dans un template<br>
// @repeat($count times)<br>
//     &lt;p&gt;Répétition numéro {{ $index }}&lt;/p&gt;<br>
// @endrepeat
