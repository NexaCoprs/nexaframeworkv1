        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1rem 0;
    }

    .innovation-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
        transition: left 0.5s;
    }

    .innovation-card:hover::before {
        left: 100%;
    }

    .scroll-indicator {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--primary-gradient);
        transform-origin: left;
        z-index: 9999;
    }

    .sidebar {
        position: fixed;
        left: 0;
        top: 80px;
        width: 300px;
        height: calc(100vh - 80px);
        overflow-y: auto;
        background: white;
        border-right: 1px solid #e5e7eb;
        z-index: 40;
    }

    .main-content {
        margin-left: 300px;
        padding: 2rem;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar li {
        margin: 0;
    }

    .sidebar a {
        display: block;
        padding: 0.75rem 1.5rem;
        color: #374151;
        text-decoration: none;
        border-left: 3px solid transparent;
        transition: all 0.2s;
    }

    .sidebar a:hover {
        background: #f3f4f6;
        border-left-color: #7D4FFE;
        color: #7D4FFE;
    }

    .sidebar a.active {
        background: #f3f4f6;
        border-left-color: #7D4FFE;
        color: #7D4FFE;
        font-weight: 600;
    }

    .component-category {
        font-weight: 600;
        color: #7D4FFE;
        padding: 0.5rem 1.5rem;
        background: #f8fafc;
        border-bottom: 1px solid #e5e7eb;
    }

    @media (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s;
        }

        .sidebar.open {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }
    }

    /* Accordion Styles */
    [data-accordion-content] {
        transition: max-height 0.3s ease;
        overflow: hidden;
    }

    [data-accordion-item].open [data-accordion-header] {
        background-color: #f3f4f6;
    }

    /* Dropdown Styles */
    [data-dropdown-menu] {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        z-index: 50;
        min-width: 200px;
    }

    [data-dropdown].open [data-dropdown-menu] {
        display: block;
    }

    /* Tabs Styles */
    [data-tab-panel] {
        display: none;
    }

    [data-tab-panel].active {
        display: block;
    }

    [data-tab].active {
        border-bottom-color: #7D4FFE !important;
        color: #7D4FFE !important;
        font-weight: 600;
    }

